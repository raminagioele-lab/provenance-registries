{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AIPR Record v1",
  "type": "object",
  "required": ["aipr_id", "content_hash", "ai_system", "ai_role", "declaration_date", "provenance_level"],
  "properties": {
    "aipr_id": { "type": "string", "pattern": "^aipr:1:[a-z0-9._-]+:sha256-[a-f0-9]{64}$" },
    "content_hash": { "type": "string", "pattern": "^sha256-[a-f0-9]{64}$" },
    "ai_system": { "type": "string", "minLength": 1 },
    "ai_role": { "type": "string", "enum": ["generated", "assisted", "edited"] },
    "declaration_date": { "type": "string", "format": "date-time" },
    "provenance_level": { "type": "string", "enum": ["full", "partial", "unknown"] },
    "notes": { "type": "string" }
  }
}
