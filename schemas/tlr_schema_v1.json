{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TLR Label v1",
  "type": "object",
  "required": ["label_code", "label_name", "description", "applicable_scope", "compatibility", "status"],
  "properties": {
    "label_code": { "type": "string", "pattern": "^[A-Z0-9_]{3,40}$" },
    "label_name": { "type": "string", "minLength": 2 },
    "description": { "type": "string", "minLength": 10 },
    "applicable_scope": { "type": "string", "enum": ["content", "platform"] },
    "compatibility": { "type": "string", "minLength": 3 },
    "status": { "type": "string", "enum": ["active", "deprecated"] }
  }
}
